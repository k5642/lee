<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beuno.beuno">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".alpha.UnoApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/uno_backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".page.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <!--
             Our activity is the built-in NativeActivity framework class.
             This will take care of integrating with our NDK code.
        -->
        <activity
            android:name=".page._extra.teapot.TeapotNativeActivity"
            android:configChanges="orientation|keyboardHidden">

            <!-- Tell NativeActivity the name of our .so -->
            <meta-data
                android:name="android.app.lib_name"
                android:value="TeapotNativeActivity" />
        </activity>
        <activity
            android:name=".page.entry.TestActivity"
            android:label="@string/label_test" />
        <activity
            android:name=".page._extra.gl.UnoGLActivity"
            android:label="@string/label_gl" />
        <activity
            android:name=".page.settings.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".page.main.SubLevelActivity"/>
    </application>

</manifest>