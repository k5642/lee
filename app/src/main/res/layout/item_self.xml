<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_bottom_height">

    <ImageView
        android:id="@+id/item_self_img"
        android:layout_width="@dimen/icon_length"
        android:layout_height="@dimen/icon_length"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/default_img_description"
        android:padding="@dimen/margin_8" />

    <TextView
        android:id="@+id/item_self_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_self_img"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/arrow_length"
        android:layout_height="@dimen/arrow_length"
        android:contentDescription="@string/default_img_description"
        android:src="@mipmap/arrow_r"
        android:padding="@dimen/margin_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

