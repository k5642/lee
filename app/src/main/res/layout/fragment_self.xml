<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGeneral"
    tools:context="com.beuno.beuno.page.homepage.SelfFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/banner_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/homepage_banner_bg_height"
                android:background="@color/bgGeneral"
                android:contentDescription="@string/default_img_description"
                android:minHeight="@dimen/toolbar_min_height"
                android:scaleType="centerCrop"
                android:src="@mipmap/home_banner_bg"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="@dimen/margin_24"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <com.beuno.beuno.widgets.UnoFloatingCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:elevation="@dimen/elevation_deep"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@color/transparent"
                android:drawableTop="@mipmap/mine_icon_orders"
                android:text="@string/self_orders" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@color/transparent"
                android:drawableTop="@mipmap/mine_icon_pay"
                android:text="@string/self_pay" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@color/transparent"
                android:drawableTop="@mipmap/mine_icon_delivery"
                android:text="@string/self_delivery" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:drawableTop="@mipmap/mine_icon_afterservice"
                android:text="@string/self_after_service" />

        </LinearLayout>

    </com.beuno.beuno.widgets.UnoFloatingCardView>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgGeneral"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingTop="@dimen/long_rect_height"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/holder_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/elevation_deep"
                android:padding="@dimen/margin_16"
                app:layout_constraintTop_toBottomOf="parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/margin_16"
                    android:paddingRight="@dimen/margin_16"
                    android:background="@color/white"
                    android:layout_height="wrap_content">

                    <com.beuno.beuno.widgets.custom.UnoItemSelf
                        android:layout_width="match_parent"
                        app:img="@mipmap/mine_icon_collect"
                        app:txt="@string/self_collect"
                        android:layout_height="wrap_content"/>

                    <View style="@style/Divider"/>

                    <com.beuno.beuno.widgets.custom.UnoItemSelf
                        android:layout_width="match_parent"
                        app:img="@mipmap/mine_icon_record"
                        app:txt="@string/self_history"
                        android:layout_height="wrap_content"/>

                    <View style="@style/Divider"/>

                    <com.beuno.beuno.widgets.custom.UnoItemSelf
                        android:layout_width="match_parent"
                        app:img="@mipmap/mine_icon_service"
                        app:txt="@string/self_service"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/bottom_holder"
                style="@style/BottomHolder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/holder_main" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>