<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/homepage_brand_length"
    android:layout_height="@dimen/homepage_brand_length"
    android:layout_margin="@dimen/margin_4"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_24"
        android:layout_marginBottom="@dimen/margin_24"
        android:contentDescription="@string/default_img_description"
        android:src="@mipmap/home_brand_hilti" />

    <TextView
        android:id="@+id/item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_img"
        android:layout_centerHorizontal="true"
        style="@style/Text.Main"
        android:layout_marginBottom="@dimen/margin_8"
        android:text="@string/test" />
</RelativeLayout>