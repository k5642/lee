<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/goods_part_a"
    android:layout_width="match_parent"
    android:layout_height="@dimen/goods_part_a_height"
    android:background="@color/bgGeneral"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/goods_img"
        android:contentDescription="@string/default_img_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/list_product_img" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/margin_8"
        android:elevation="@dimen/elevation_deep">

        <TextView
            android:id="@+id/goods_img_idx"
            android:layout_width="@dimen/goods_img_idx_width"
            android:layout_height="@dimen/goods_img_idx_height"
            style="@style/Text.Description.Border"
            android:text="@string/tmp_goods_img_idx" />
    </android.support.v7.widget.CardView>
</android.support.v7.widget.CardView>