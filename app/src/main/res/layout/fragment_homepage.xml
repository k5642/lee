<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGeneral"
    tools:context="com.beuno.beuno.page.homepage.HomepageFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/banner_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/homepage_banner_bg_height"
                android:background="@color/bgGeneral"
                android:contentDescription="@string/default_img_description"
                android:minHeight="@dimen/toolbar_min_height"
                android:scaleType="centerCrop"
                android:src="@mipmap/home_banner_bg"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed" />

            <ImageView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/homepage_banner_height"
                android:layout_gravity="bottom"
                android:contentDescription="@string/default_img_description"
                android:scaleType="fitXY"
                android:src="@mipmap/home_banner"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="@dimen/margin_24"
                app:layout_collapseMode="pin"
                app:logo="@mipmap/home_logo"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgGeneral"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/holder_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/elevation_light"
                android:padding="@dimen/margin_16"
                app:layout_constraintTop_toBottomOf="parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/holder_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:elevation="@dimen/elevation_light"
                android:paddingStart="@dimen/margin_24"
                android:paddingEnd="@dimen/margin_24"
                app:layout_constraintTop_toBottomOf="@id/holder_category">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/margin_16"
                    android:paddingEnd="@dimen/margin_16"
                    android:layout_gravity="center"
                    android:background="@drawable/home_brand_bg" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/holder_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:elevation="@dimen/elevation_light"
                android:paddingStart="@dimen/margin_8"
                android:paddingEnd="@dimen/margin_8"
                app:layout_constraintTop_toBottomOf="@id/holder_brand">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/home_brand_bg" />
            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/bottom_holder"
                style="@style/BottomHolder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/holder_recommend" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>